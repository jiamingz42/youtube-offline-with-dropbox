<h1><%= @youtube_vidoe.title %></h1>

<div class="thumbnail">
  <%= link_to @youtube_vidoe.youtube_video_url, :target => '_blank' do %>
    <%= image_tag attachments['thumbnails'].url, :style => 'max-width: 500px' %>
  <% end %>
</div>

<div class="description">
  <h2>Description</h2>
  <p><%= raw @youtube_vidoe.description.gsub("\n", "<br>") %></p>
</div>

<div class="source">
  Source: <a href="<%= @youtube_vidoe.youtube_video_url %>"><%= @youtube_vidoe.youtube_video_url %></a>
</div>
